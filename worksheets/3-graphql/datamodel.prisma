type Customer {
    id: ID! @unique
    email: String @unique
    name: String!
    orders: [Order!]!
}

type Order {
    id: ID! @unique
    date: DateTime!
    buyer: Customer!
    amount: Float!
    orderlines: [Orderline!]!
}

type Product {
    id: ID! @unique
    title: String!
    price: Float!
    orderlines: [Orderline!]!
}

type Orderline {
    id: ID! @unique
    quantity: Int!
    product: Product!
    order: Order!
}

